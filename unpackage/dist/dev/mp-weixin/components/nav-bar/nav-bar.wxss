/* 水平间距 */
.nav-bar {
  width: 100%;
  background-color: #e6f0ff;
  position: relative;
  z-index: 10;
}
.nav-bar .status-bar {
  width: 100%;
}
.nav-bar .nav-content {
  display: flex;
  align-items: center;
  height: 44px;
  padding: 0 15px;
  box-sizing: border-box;
}
.nav-bar .nav-content .logo-container {
  display: flex;
  align-items: center;
  margin-right: 10px;
}
.nav-bar .nav-content .logo-container .logo {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.nav-bar .nav-content .title-container {
  flex: 1;
  display: flex;
  align-items: center;
}
.nav-bar .nav-content .title-container .title {
  font-size: 18px;
  font-weight: bold;
  color: #2979ff;
}
.nav-bar .nav-content .right-icons {
  display: flex;
  align-items: center;
}