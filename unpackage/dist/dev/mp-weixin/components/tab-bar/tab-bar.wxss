/* 水平间距 */
.tab-bar {
  height: 50px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #eee;
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.tab-bar .tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.tab-bar .tab-item.active .tab-icon {
  color: #2979ff;
}
.tab-bar .tab-item.active .tab-text {
  color: #2979ff;
}
.tab-bar .tab-item .tab-icon {
  font-size: 24px;
  color: #999;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-bar .tab-item .tab-icon .icon-image {
  width: 24px;
  height: 24px;
}
.tab-bar .tab-item .tab-text {
  font-size: 12px;
  color: #999;
  margin-top: 2px;
}
.tab-bar .tab-item .tab-text.active-text {
  color: #2979ff;
}
.tab-bar .tab-item.add-btn {
  position: relative;
}
.tab-bar .tab-item.add-btn .add-icon {
  width: 40px;
  height: 40px;
  background-color: #2979ff;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24px;
  position: absolute;
  bottom: 5px;
}