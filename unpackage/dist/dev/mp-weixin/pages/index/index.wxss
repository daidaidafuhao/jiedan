/* 水平间距 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}
.nav-right-icons {
  display: flex;
  align-items: center;
  gap: 15px;
}
.nav-right-icons .menu-icon, .nav-right-icons .search-icon {
  font-size: 20px;
  color: #333;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  overflow: hidden;
  padding: 0 15px;
  box-sizing: border-box;
  width: 100%;
}

/* 功能卡片区域 */
.function-cards {
  display: flex;
  margin: 15px 0;
  gap: 15px;
  flex-wrap: wrap;
  width: 100%;
}
.function-cards .right-cards {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 15px;
  min-width: 0;
  /* 防止flex项目溢出 */
}
.function-card {
  border-radius: 12px;
  padding: 15px;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}
.function-card .card-content {
  position: relative;
  z-index: 2;
}
.function-card .card-title {
  font-size: 16px;
  font-weight: bold;
  color: #fff;
  margin-bottom: 5px;
  display: block;
}
.function-card .card-desc {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}
.function-card .card-icon {
  position: absolute;
  width: 60px;
  height: 60px;
  right: -5px;
  bottom: -5px;
  max-width: 40%;
  object-fit: contain;
}
.blue-card {
  background: linear-gradient(135deg, #4364f7, #6fb1fc);
  flex: 1;
  height: 100%;
  min-height: 150px;
  min-width: 0;
  /* 防止flex项目溢出 */
}
.orange-card {
  background: linear-gradient(135deg, #ff9a9e, #fad0c4);
  height: 70px;
  width: 100%;
}
.orange-card .orange-dots {
  display: flex;
  margin-top: 5px;
}
.orange-card .orange-dots .dot {
  font-size: 20px;
  color: rgba(255, 255, 255, 0.7);
  margin-right: 5px;
}
.orange-card .orange-icon {
  width: 50px;
  height: 50px;
  right: 0;
  bottom: -10px;
  max-width: 30%;
}
.purple-card {
  background: linear-gradient(135deg, #a18cd1, #fbc2eb);
  height: 70px;
  width: 100%;
}
.purple-card .notification-icons {
  position: absolute;
  right: 10px;
  bottom: 5px;
}
.purple-card .notification-icons .notification-icon {
  width: 40px;
  height: 40px;
  max-width: 100%;
}
.purple-card .notification-icons .notification-badge {
  position: absolute;
  top: 0;
  right: 0;
  width: 12px;
  height: 12px;
  background-color: #ff4d4f;
  border-radius: 50%;
  border: 2px solid #fff;
}

/* 任务介绍卡片 */
.task-intro-card {
  margin: 15px 0;
  padding: 20px;
  background-color: #e6f0ff;
  border-radius: 12px;
  display: flex;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
  min-height: 120px;
  width: 100%;
  box-sizing: border-box;
}
.task-intro-card .task-intro-text {
  display: flex;
  flex-direction: column;
  z-index: 2;
  max-width: 60%;
}
.task-intro-card .task-intro-text .task-intro-title {
  font-size: 22px;
  font-weight: bold;
  color: #2979ff;
  margin-bottom: 5px;
}
.task-intro-card .task-intro-text .task-intro-subtitle {
  font-size: 14px;
  color: #666;
  margin-bottom: 15px;
}
.task-intro-card .task-intro-text .check-now-btn {
  background-color: #2979ff;
  color: #fff;
  padding: 5px 12px;
  font-size: 14px;
  border-radius: 20px;
  border: none;
  width: -webkit-fit-content;
  width: fit-content;
  height: 30px;
  line-height: 20px;
}
.task-intro-card .task-intro-image {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100px;
  height: 100px;
  z-index: 1;
  max-width: 40%;
  object-fit: contain;
}

/* 公告滚动条 */
.announcement-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 10px 15px;
  border-radius: 25px;
  margin: 15px 0;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}
.announcement-bar .announcement-icon {
  margin-right: 10px;
  font-size: 18px;
  color: #ff9500;
  flex-shrink: 0;
}
.announcement-bar .announcement-text {
  font-size: 14px;
  color: #666;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
}

/* 推荐列表 */
.recommendation-list {
  background-color: #fff;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}
.recommendation-list .list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}
.recommendation-list .list-header .list-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.recommendation-list .list-header .list-more {
  font-size: 14px;
  color: #999;
}
.task-item {
  border-radius: 10px;
  background-color: #f9f9f9;
  padding: 15px;
  margin-bottom: 10px;
  width: 100%;
  box-sizing: border-box;
}
.task-item .task-user {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  flex-wrap: wrap;
}
.task-item .task-user .user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
  flex-shrink: 0;
}
.task-item .task-user .user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}
.task-item .task-user .user-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.task-item .task-user .task-status {
  margin-left: auto;
  background-color: #e6f7ff;
  color: #1890ff;
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 12px;
  flex-shrink: 0;
}
.task-item .task-details {
  margin-bottom: 15px;
}
.task-item .task-details .detail-item {
  display: flex;
  margin-bottom: 8px;
  flex-wrap: wrap;
}
.task-item .task-details .detail-item .detail-label {
  color: #999;
  font-size: 14px;
  width: 90px;
  flex-shrink: 0;
}
.task-item .task-details .detail-item .detail-value {
  color: #333;
  font-size: 14px;
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.task-item .task-actions {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  flex-wrap: wrap;
}
.task-item .task-actions .action-btn {
  padding: 5px 15px;
  border-radius: 20px;
  font-size: 14px;
  height: 30px;
  line-height: 20px;
  flex-shrink: 0;
}
.task-item .task-actions .accept-btn {
  background-color: #2979ff;
  color: #fff;
}
.task-item .task-actions .contact-btn {
  background-color: #f5f5f5;
  color: #666;
}
.bottom-placeholder {
  height: 70px;
  /* 底部导航栏高度 + 一些额外空间 */
}

/* 媒体查询，针对小屏幕设备优化 */
@media screen and (max-width: 375px) {
.function-cards {
    gap: 10px;
}
.task-intro-text .task-intro-title {
    font-size: 20px;
}
.task-intro-text .task-intro-subtitle {
    font-size: 12px;
}
.card-title {
    font-size: 14px;
}
.card-desc {
    font-size: 10px;
}
}